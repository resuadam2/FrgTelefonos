<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelfDetailActivity">

    <TextView
        android:id="@+id/tvTelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telfEjemplo"
        android:textSize="45sp"
        android:layout_marginTop="@dimen/button_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lvLlamadas"
        app:layout_constraintEnd_toEndOf="@+id/lvLlamadas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/lvLlamadas"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvLlamadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTelf" />
</androidx.constraintlayout.widget.ConstraintLayout>